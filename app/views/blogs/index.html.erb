<p id="notice"><%= notice %></p>

<header>
<h1>投稿一覧</h1>
</header>

<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>文書</th>
      <th>画像</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.user.name %></td>
        <td><%= blog.content %></td>
        <td><%= image_tag blog.image.url unless blog.image.url == nil %></td>
        <td><%= link_to '投稿詳細', blog %></td>
        <% if logged_in? && current_user.id == blog.user_id %>
          <td><%= link_to '投稿を編集する', edit_blog_path(blog) %></td>
          <td><%= link_to '投稿を削除する', blog, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規投稿画面へ', new_blog_path %>


<footer>
<p>fakebook</p>
</footer>