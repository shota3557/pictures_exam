<p id="notice"><%= notice %></p>

<h1>登録者のページ</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to '詳細画面へ', user %></td>
        <td><%= link_to '編集画面へ', edit_user_path(user) %></td>
        <td><%= link_to '削除する', user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

